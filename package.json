{
  "name": "remix-portfolio",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "NODE_ENV=production remix vite:build",
    "build:svg": "svgo -f ./app/assets/icons",
    "build:icons": "npx @svgr/cli --config-file ./svgr.config.cjs -- ./app/assets/icons",
    "deploy": "npm run build && wrangler pages deploy",
    "dev": "remix vite:dev",
    "lint": "run-s lint:*",
    "lint:es": "eslint --ext .js,.jsx,.ts,.tsx --color ./",
    "lint:ls": "npx @ls-lint/ls-lint",
    "lint:prettier": "npx prettier --check .",
    "start": "wrangler pages dev ./build/client",
    "typecheck": "tsc",
    "typegen": "wrangler types",
    "preview": "npm run build && wrangler pages dev",
    "cf-typegen": "wrangler types"
  },
  "dependencies": {
    "@remix-run/cloudflare": "^2.17.1",
    "@remix-run/cloudflare-pages": "^2.17.1",
    "@remix-run/react": "^2.17.1",
    "cssnano": "^7.1.1",
    "date-fns": "^4.1.0",
    "eslint": "^8.57.0",
    "isbot": "^5.1.31",
    "postcss-extend-rule": "^4.0.0",
    "postcss-import": "^16.1.1",
    "postcss-nested": "^7.0.2",
    "postcss-simple-vars": "^7.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-intl": "^7.1.11",
    "react-is": "^19.1.1",
    "react-vertical-timeline-component": "^3.6.0",
    "recharts": "^3.2.1",
    "remix-utils": "^7.7.0",
    "svgo": "^4.0.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250927.0",
    "@eslint/compat": "^1.4.0",
    "@eslint/js": "^8.57.0",
    "@ls-lint/ls-lint": "^2.3.1",
    "@remix-run/dev": "^2.17.1",
    "@svgr/cli": "^8.1.0",
    "@svgr/plugin-jsx": "^8.1.0",
    "@svgr/plugin-prettier": "^8.1.0",
    "@svgr/plugin-svgo": "^8.1.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@types/react-vertical-timeline-component": "^3.3.6",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "autoprefixer": "^10.4.21",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-storybook": "^9.1.9",
    "globals": "^16.4.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-mixins": "^12.1.2",
    "stylelint": "^16.24.0",
    "stylelint-config-standard": "^39.0.0",
    "tailwindcss": "^4.1.13",
    "terser": "^5.44.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.45.0",
    "vite": "^5.2.10",
    "vite-tsconfig-paths": "^5.1.4",
    "wrangler": "^3.57.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
